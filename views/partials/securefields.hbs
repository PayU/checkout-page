<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
        <form id="payment-form">
          <div class="group">
            <label>
              <span>Name</span>
              <input id="cardholder-name" class="field" placeholder="John Doe" />
            </label>
            <label>
              <span>Phone</span>
              <input id="phone" class="field" placeholder="(123) 456-7890" type="tel" />
            </label>
          </div>
          <div class="group">
            <label>
              <span>Card</span>
              <div id="card-secure-fields" class="field"></div>
            </label>            
          </div>
          <button type="submit">Pay</button>
        </form>  
    <script src="https://js.paymentsos.com/latest/secure-fields.min.js"></script>
    <script type='text/javascript' src="index.js"></script>     
  </body>
</html>
